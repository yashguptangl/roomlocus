    noticePeriod        String
    furnishingType      String
    accomoType          String
    foodAvailable       Boolean
    parking             String[]
    preferTenants       String[]
    genderPrefer        String
    timeRestrict        Boolean
    PGInside          String[]
    PGOutside         String[]
